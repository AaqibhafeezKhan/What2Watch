<!DOCTYPE html>
<html>

<head>
  <title>Search - What2Watch</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }

    h1 {
      text-align: center;
    }

    form {
      text-align: center;
      margin-bottom: 20px;
    }

    .search-input {
      width: auto;
      padding: 5px;
      font-size: 16px;
    }

    .search-button {
      padding: 5px 10px;
      font-size: 16px;
    }

    .results {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
    }

    .movie {
      width: 200px;
      margin: 10px;
      text-align: center;
    }

    .movie img {
      width: 100%;
      height: auto;
      margin-bottom: 10px;
    }

    .movie p {
      margin: 0;
    }
  </style>
</head>

<body>
  <h1>Movie Search Results</h1>

  <form action="/" method="GET">
    <input type="text" name="query" placeholder="Enter movie name or TMDB ID" />
    <button type="submit">Search</button>
  </form>

  <div class="results">
    <% movies.forEach((movie)=> { %>
      <a href="/movie/<%= movie.id %>">
        <div class="movie">
          <% if (movie.poster) { %>
            <img src="<%= movie.poster %>" alt="<%= movie.title %>" />
            <% } %>
              <p>
                <%= movie.title %> (<%= movie.year %>)
              </p>
        </div>
        <% }); %>
  </div>
</body>

</html>